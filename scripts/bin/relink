#!/usr/bin/env bash
dotfiles="$HOME/Development/mattcaldwell/dotfiles"

ln -sf $dotfiles/main/profile ~/.profile
ln -sf $dotfiles/main/bash_profile ~/.bash_profile
ln -sf $dotfiles/main/bash_aliases ~/.bash_aliases
ln -sf $dotfiles/main/bash_functions ~/.bash_functions
ln -sf $dotfiles/main/bashrc ~/.bashrc
ln -sf $dotfiles/main/vimrc ~/.vimrc
ln -sf $dotfiles/data/gitconfig ~/.gitconfig
ln -sf $dotfiles/data/tmux.conf ~/.tmux.conf
ln -sf $dotfiles/data/tmuxinator ~/.tmuxinator
ln -sf $dotfiles/scripts/hooks/rvm/after_cd ~/.rvm/hooks/after_cd
ln -sf vim /usr/local/bin/vi
mkdir -p ~/.config
ln -sf $dotfiles/data/flake8 ~/.config/flake8
